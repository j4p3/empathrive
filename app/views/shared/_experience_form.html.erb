<%= form_for current_user.experiences.build do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <%= f.label :title %>
  <%= f.text_field :title, placeholder: "The Time I ..." %>

  <%= f.label :description %>
  <%= f.text_area :description, placeholder: "It all started when ..." %>

  <%= f.label :media_url %>
  <%= f.text_field :media_url, placeholder: "http://www.youtube.com/..." %>
  
  <br>
  <%= f.submit "Post", class: "btn btn-large btn-primary" %>
<% end %>